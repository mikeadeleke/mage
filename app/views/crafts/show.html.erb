
	<div class="row-fluid">
		<div class="span12 page-header">
			<img src="<%= @craft.image.url %>">
			<h1 class="resource-title"><span><%= @craft.name %></span></h1>
			<div class="breadcrumbs">
				<a href="/<%= @classification.path %>"><%= @classification.name %></a> > <%= @craft.name %>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span5 white-container resource-left">
			<h3>Description</h3>
			<p><%= @craft.short_description %></p>
		</div>
		<div class="span7	resource-right white-container">
			<h3>Top Resources</h3>
			<p>The top <%= @craft.name %> learning resources as voted by our mages.</p>
			<% @resources.each_with_index do |resource, i| %>
				<a class="craft-resource" href="<%= resource.full_path %>">
					<div class="craft-resource-image">
						<img src="<%= resource.avatar.url %>">
					</div>
					<div class="craft-resource-content">
						<h4><%= (i + 1) %>) <%= resource.name %></h4>
						<span><%= resource.type.name %> for <%= resource.level.name %> Mages</span>
						<p><%= resource.description %></p>
					</div>
				</a>
			<% end %>
		</div>
	</div>
