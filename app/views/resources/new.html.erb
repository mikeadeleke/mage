
	<div class="row-fluid">
		<div class="span12 page-header">
			<h1>Add a new Product</h1>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span5 form-container">
			<%= form_for @resource, :url => resources_url, :method => "post" do |form| %>
				<div class="form-input control-group">
					<%= label_tag "name", "Product Name", :class  => "control-label" %>
					<div class="controls">
						<%= form.text_field :name, { :placeholder => "Name of Resource", :class => "form-text-input", :required => "true" } %>
						<span class="no">What'cha call it?</span>
					</div>
				</div>
				<div class="form-input control-group">
					<%= label_tag "author", "Company", :class  => "control-label" %>
					<div class="controls">
						<%= form.text_field :author, { :placeholder => "Author of Resource", :class => "form-text-input", :required => "true" } %>
						<span class="no">Who's the awesome company!</span>
					</div>
				</div>
				<div class="form-input control-group">
					<%= label_tag "link", "Company URL", :class  => "control-label" %>
					<div class="controls">
						<%= form.url_field :link, { :placeholder => "Resource URL", :class => "form-text-input", :required => "true" } %>
						<span class="no">Help us find it!</span>
					</div>
				</div>
				<div class="form-input control-group">
					<div class="controls">
						<%= label_tag "resource_avatar", "Upload Image", :class => "control-label" %>
						<%= form.file_field :avatar, :class => "resource-avatar-input", :required => "#{Rails.env.development?}" %>
					</div>
				</div>
				<div class="form-input control-group">
					<%= label_tag "description", nil, :class => "control-label" %>
					<div class="controls">
						<%= form.text_area :description, { :class => "form-text-input resource-text-area", :rows => 10, :required => "true" } %>
						<span class="no">Describe it succinctly!</span>
					</div>
				</div>
				<div class="form-input control-group">
					<%= button_tag "Add Resource", :class => "form-button link-gold" %>
				</div>
			<% end %>
		</div>
		<div class="span7">
			<%= render 'shared/error_messages' %>
		</div>
	