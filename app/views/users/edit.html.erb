<div class="container">
	<div class="row-fluid">
		<div class="span12 page-header">
			<h1>Edit Your Mage Account</h1>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span5 form-container white-container">
			<%= form_tag "/users/#{@user.username}", :method => "put" do %>
				<div class="form-input control-group">
					<label for="email" class="control-label">Email Address</label>
					<div class="controls">
						<input type="email" name="email" id="email" placeholder="Email Address" class="form-text-input" value="<%= @user.email %>" required>
						<span class="no">Make sure it's valid!</span>
					</div>
				</div>
				<div class="form-input control-group">
					<label for="first" class="control-label">First Name</label>
					<div class="controls">
						<input type="text" name="first" id="first" placeholder="First Name" class="form-text-input" value="<%= @user.first_name %>" required>
						<span class="no">Keep it real.</span>
					</div>
				</div>
				<div class="form-input control-group">
					<label for="last" class="control-label">Last Name</label>
					<div class="controls">
						<input type="text" name="last" id="last" placeholder="Last Name" class="form-text-input" value="<%= @user.last_name %>" required>
						<span class="no">We won't make this public.</span>
					</div>
				</div>
				<div class="form-input control-group">
					<label for="bio" class="control-label">Short Bio</label>
					<div class="controls">
						<textarea name="bio" id="bio" class="form-text-input" rows="10"><%= @user.bio %></textarea>
						<span class="no">Scribe your interests!</span>
					</div>
				</div>
				<div class="form-input control-group">
					<button class="form-button link-gold">Update Details</button>
				</div>
			<% end %>
		</div>
		<div class="span7">
			<%= form_tag "/users", :method => "post" do %>
			<div class="form-container">
				<div class="form-input control-group">
					<label for="current-password" class="control-label">Current Password</label>
					<div class="controls">
						<input type="password" name="current-password" id="password" placeholder="Current Password" class="form-text-input" required>
						<span class="no">Enter your current password.</span>
					</div>
				</div>
				<div class="form-input control-group">
					<label for="new-password" class="control-label">New Password</label>
					<div class="controls">
						<input type="password" name="new-password" id="password" placeholder="New Password" class="form-text-input" required>
						<span class="no">Make your new password secure.</span>
					</div>
				</div>
				<div class="form-input control-group">
					<label for="confirm-password" class="control-label">Confirm Password</label>
					<div class="controls">
						<input type="password" name="confirm-password" id="password" placeholder="Confirm Password" class="form-text-input" required>
						<span class="no">Confirm your new password.</span>
					</div>
				</div>
				<div class="form-input control-group">
					<button class="form-button link-gold">Update Password</button>
				</div>
				<% end %>
			</div>
			<div class="form-container">
				<%= form_tag "/users/#{@user.username}", :method => "delete", :class => "delete-form" do %>
					<div class="form-input control-group">
						<label for="delete" class="control-label">Delete Account</label>
						<div class="controls">
							<input type="text" name="delete" id="delete" placeholder="Type DELETE to Confirm" class="form-text-input" required>
							<span class="no">This is permanent!</span>
						</div>
					</div>
					<div class="form-input control-group">
					<button onClick="return confirm_delete('Are you sure you want to delete your account?');" disabled class="form-button link-red delete-button">Delete Account</button>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>